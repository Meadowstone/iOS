platform :ios, '10.0'
use_frameworks!
inhibit_all_warnings!

def pods_to_add
    pod 'MMDrawerController', '0.6.0'
    pod 'AFNetworking', '2.5.4', :subspecs => ['Serialization', 'Security', 'Reachability', 'NSURLConnection', 'NSURLSession']
    pod 'MBProgressHUD', '0.9.1'
    pod 'SDWebImage', '3.7.3'
    pod 'SVPullToRefresh', '0.4.1'
    pod 'Stripe'
    pod 'StripeTerminal', '2.0'
    pod 'SnapKit'
end

target 'Farmstand Cart' do
    pods_to_add
end

target 'Farmstand Cart (DEV)' do
    pods_to_add
end
